<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <net.daum.mf.map.api.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="left|top"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/search_nursinghome"
            android:text="양로원"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/search_btn2"
            android:text="보육원"
            android:textSize="20dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/search_button_green"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:textSize="17dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_road"
            android:layout_margin="5dp"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:textColor="@color/design_default_color_primary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/place_url"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:textColor="@color/design_default_color_primary"
            />



    </LinearLayout>

</FrameLayout>
